<table id="training" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Course_Id</th>
            <th>ExpiryDate</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>

        $(document).ready(function() {

            var table = $("#training").DataTable({
                    ajax: {
                        url: "/api/trainings?query=%QUERY",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "course.Id"
                           
                        },
                        {
                            data: "ExpiryDate"
                        }
                    ]
                }
            );
        });

    </script>
}
