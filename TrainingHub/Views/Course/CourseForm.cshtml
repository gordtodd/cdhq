@model TrainingHub.ViewModels.NewCourseViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Setup New Course</h2>
@using (Html.BeginForm("Save", "Course"))
{
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                @Html.LabelFor(c => c.Course.Name)
                @Html.TextBoxFor(c => c.Course.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Course.Description)
                @Html.TextBoxFor(c => c.Course.Description, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Course.ValidNoOfDays)
                @Html.TextBoxFor(c => c.Course.ValidNoOfDays, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Course.WarnNoOfDayBeforeExpire)
                @Html.TextBoxFor(c => c.Course.WarnNoOfDayBeforeExpire, new { @class = "form-control" })
            </div>
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(c => c.Course.SupervisorTraining) Supervisor Training?
                </label>
            </div>

        </div> 
        <div class="col-sm-4">
            <div>
                @Html.LabelFor(c => c.CourseTargetGroups)
                @Html.ListBoxFor(c => c.CourseTargetGroups, Model.TargetGroups, new { @style = "width:200px;height:400px;", @class = "form-control" })
            </div>

            @Html.HiddenFor(c => c.Course.Id)
        </div>
    </div>

    @Html.ActionLink("Back", "Index", new object { }, new { @class = "btn btn-primary" })
    <button type="submit" class="btn btn-primary">Save</button>


        }

